<header id="nav-header" class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand font-weight-bold" href="/">Rau tươi</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <img class="mr-3" src="{{acc.avt}}" height="40px" width="40px" alt="">
                <div class="d-flex align-items-center text-white">{{acc.username}}</div>
            </ul>
    </div>
</header>

<div class="d-flex">
    <div class="slide-bar">
        <div class="navbar navbar-dark bg-dark align-items-start" id="navbar-main">
            <div class="nav flex-column nav-pills" id="v-pills-tab navbar-main" role="tablist" aria-orientation="vertical">
                <a class="btn-hover btn text-white" href="/items/showFE">Giao diện hiển thị sản phẩm</a>
                <a class="btn-hover btn text-white" href="/cart/showCart">Danh sách đơn đặt hàng</a>
                <a class="btn-hover btn text-white" href="/cart/shippingCart">Đơn hàng đang vận chuyển</a>
                <a class="btn-hover btn text-white" href="/cart/takeCart">Nhận đơn hàng</a>
                <div class="dropdown-divider"></div>
                <a class="btn-hover btn text-white" href="/login/checkInfor">Xem thông tin cá nhân</a>
                <a class="btn-hover btn text-white" href="/login/changePass">Đổi mật khẩu</a>
                <a class="btn-hover btn text-white" href="/login/editInfo">Sửa thông tin</a>
                <a class="btn-hover btn text-white" href="/login/logout">Đăng xuất</a>
            </div>
        </div>
    </div>

    <div class="w-100 form-item" >
        <div>
            <div class="row">
                <img class="col-6" src="{{item.image}}" alt="{{item.name}}">
                <div class="col-6">
                    <div>
                        <h1 class="mb-4">{{item.name}}</h1>
                        <p>Giá tiền: {{item.cost}}/kg</p>
                        <p>Chỉ còn lại: {{item.amount}} kg</p>
                    </div>
                    <div>
                        <h3>Phân loại</h3>
                        <p>{{item.classify}}</p>            
                    </div>

                    <div>
                        <h3>Mô tả</h3>
                        <p>{{item.description}}</p>
                    </div>
                    <div>
                        <h3>Nơi sản xuất</h3>
                        <p>{{item.from}}</p>
                    </div>

                    <div class="mt-4 ml-4">
                        <form action="/items/addCart/{{item._id}}" method="POST" onsubmit="return myFunction()">
                            <div class="row justify-content-start input-group">
                                <input type="text" name="name" id="name" value="" hidden>
                                <input type="number" name="cost" id="cost" value="{{item.cost}}" hidden>
                                <input type="text" name="nameitem" id="nameitem" value="{{item.name}}" hidden>
                                
                                <div class="row">
                                   <input type="number" class="form-control w-50" id="amount" name="amount" data-amount="{{item.amount}}" placeholder="Nhập số lượng">
                                    <div class="input-group-append">
                                        <span class="input-group-text">Kg</span>
                                    </div> 
                                    <button class="btn btn-primary">Đặt hàng</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <p id="err"></p>
                        
                    </div>
                </div>
            </div>

            
        </div>                  
    </div>
</div>

<script>
    document.getElementById("name").value = window.localStorage.getItem("name");
</script>

<script>
    function myFunction() {
        const x = document.getElementById("amount");
        const iAmount = parseInt(x.getAttribute('data-amount')) 
        const Amount = $('#amount').val()
        const err = document.getElementById("err")

        if(Amount == 0){
            err.innerHTML = "* Số lượng phải lớn hơn 0"
            return false;
        }else if(iAmount < Amount){
            err.innerHTML = "* Sô lượng còn lại không đủ"
            return false;
        }else{
            alert("Đặt hàng thành công");
            return true;
        }

    }   
</script>




