<div class="mt-4">
    <h3>Thêm rau, củ</h3>
    <form method="POST" action="store">

        <div class="form-group">
            <label for="name">Nhập tên sản phẩm</label>
            <input type="text" class="form-control" id="name" name="name" />
        </div>

        <div class="form-group">
            <label for="classify">Phân loại</label>
            <div class="input-group">
                <select class="custom-select" aria-label="Default select example" id="classify" name="classify">
                    <option selected>Choose...</option>
                    <option value="Rau">Rau</option>
                    <option value="Cu">Củ</option>
                    <option value="Qua">Quả</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="amount">Số lượng</label>
            <input type="number" class="form-control" id="amount" name="amount" />
        </div>

        <div class="form-group">
            <label for="image">Hình ảnh minh họa</label>
            <textarea class="form-control" aria-label="With textarea" name="image" id="image" cols="40" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" aria-label="With textarea" name="description" id="description" cols="30" rows="10"></textarea>

        </div>

        <div class="form-group">
            <label for="from">Nơi sản xuất</label>
            <textarea class="form-control" aria-label="With textarea" name="from" id="from" cols="30" rows="4"></textarea>

        </div>

        <div class="form-group">
            <label for="cost">Giá tiền</label>
            <input type="number" class="form-control" id="cost" name="cost"/>
        </div>
        
        <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
    </form>
</div>