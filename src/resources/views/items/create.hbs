                <a class="btn-hover btn text-white" href="/cart/transportCart">Xác nhận đơn hàng</a>
                <a class="btn-hover btn text-white" href="/cart/shippingCart">Đơn hàng đang vận chuyển</a>
                <a class="btn-hover btn text-white" href="/cart/takeCart">Nhận đơn hàng</a>
                <a class="btn-hover btn text-white" href="/statistical">Thống kê</a>
                <div class="dropdown-divider"></div>
                <a class="btn-hover btn text-white" href="/login/checkInfor">Xem thông tin cá nhân</a>
                <a class="btn-hover btn text-white" href="/login/changePass">Đổi mật khẩu</a>
                <a class="btn-hover btn text-white" href="/login/editInfo">Sửa thông tin</a>
                <a class="btn-hover btn text-white" href="/login/logout">Đăng xuất</a>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center w-100">
        <div class="mt-4 card w-50 ">
            <div class="card-body blob">
                <form method="POST" action="store" id="form-create-item">
                    <h3 class=" justify-content-center">Thêm rau, củ</h3>

                    <div class="form-group">
                        <label for="name">Nhập tên sản phẩm</label>
                        <input type="text" class="form-control" id="name" name="name" oninvalid="this.setCustomValidity('Bạn chưa nhập tên sản phẩm')" oninput="setCustomValidity('')" required/>
                    </div>

                    <div class="form-group">
                        <label for="classify">Phân loại</label>
                        <div class="input-group">
                            <select class="custom-select" id="classify" name="classify" form="form-create-item">
                                <option selected>Choose...</option>
                                <option value="Rau">Rau</option>
                                <option value="Củ">Củ</option>
                                <option value="Quả">Quả</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="amount">Số lượng</label>
                        <input type="number" class="form-control" id="amount" name="amount" oninvalid="this.setCustomValidity('bạn chưa nhập số lượng')" oninput="setCustomValidity('')" required/>
                    </div>

                    <div class="form-group">
                        <label for="cost">Giá tiền</label>
                        <input type="number" class="form-control" id="cost" name="cost" title="Bạn chưa nhập giá tiền" required/>
                    </div>

                    <div class="form-group">
                        <label for="image">Link hình ảnh minh họa</label>
                        <textarea class="form-control" aria-label="With textarea" name="image" id="image" cols="40" rows="4" oninvalid="this.setCustomValidity('Bạn chưa nhập link hình ảnh')" oninput="setCustomValidity('')" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="description">Mô tả</label>
                        <textarea class="form-control" aria-label="With textarea" name="description" id="description" cols="30" rows="10" oninvalid="this.setCustomValidity('Bạn chưa nhập mô tả')" oninput="setCustomValidity('')" required></textarea>

                    </div>

                    <div class="form-group">
                        <label for="from">Nơi sản xuất</label>
                        <textarea class="form-control" aria-label="With textarea" name="from" id="from" cols="30" rows="4" oninvalid="this.setCustomValidity('Bạn chưa nhập nơi sản xuất')" oninput="setCustomValidity('')" required></textarea>

                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    